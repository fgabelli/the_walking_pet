rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS Collection
    // Anyone auth'd can read profiles. Users can only write their own profile.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // DOGS Collection
    // Anyone auth'd can read dogs. 
    // Creation: Must be auth'd and set themselves as owner.
    // Update/Delete: Must be the owner.
    match /dogs/{dogId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // CHATS Collection
    // Only participants can read/write.
    match /chats/{chatId} {
      allow read, write: if isAuthenticated() && (request.auth.uid in resource.data.participants || request.auth.uid in request.resource.data.participants);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isAuthenticated(); // Simplified, ideally check parent chat participants
      }
    }

    // WALKS Collection
    // Anyone auth'd can read.
    // Create: Any auth'd user.
    // Update: Creator or participants (for joining/leaving).
    match /walks/{walkId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated(); // Simplified to allow joining/leaving
      allow delete: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
    }

    // USER LOCATIONS Collection (for Map)
    // Anyone auth'd can read locations (to see others on map).
    // Users can only write their own location document (docId must match uid).
    match /user_locations/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
  }
}
